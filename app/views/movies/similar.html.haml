-# in app/views/movies/similar.html.haml

%h2 Other movies by the director of #{@movie.title}

%table#movies
  %thead
    %tr
      %th Title
      %th Rating
      %th Release Date
      %th Director
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Back to movie list', movies_path

